<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_gravity="center"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/LinerQustionCansel">
        <TextView
            android:id="@+id/tvTextCanselQuastion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="آیا قصد لغو سرویس انتخابی را دارید؟"
            android:lineSpacingExtra="4dp"
            android:textSize="18sp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinerQustionCansel"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_layout_select_job_body"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tvTextCansel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/Description"
            android:textSize="18sp"
            android:layout_marginLeft="10dp" />
        <EditText
            android:id="@+id/etCansel"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/rounded_edittext2"
            android:inputType="text|textMultiLine"
            android:gravity="top|end"
            android:textAlignment="gravity"
            android:textSize="18sp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            tools:ignore="RtlHardcoded"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
</RelativeLayout>
