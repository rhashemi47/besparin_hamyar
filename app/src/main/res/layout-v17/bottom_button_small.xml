<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:background="@drawable/rounded_button_bottom"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <Button
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:id="@+id/btnHome"
            android:layout_weight="1"
            android:background="#ffffff"
            android:divider="@color/transparent"
            android:drawableBottom="@drawable/home_small"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:id="@+id/btnDutyToday"
            android:layout_weight="1"
            android:divider="@color/transparent"
            android:background="#fff"
            android:drawableBottom="@drawable/calendar_small"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:id="@+id/btnServices_at_the_turn"
            android:layout_weight="1"
            android:background="#ffffff"
            android:divider="@color/transparent"
            android:drawableBottom="@drawable/clock_small"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:divider="@color/transparent"
            android:background="@color/transparent"
            android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/btnCredit"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="اعتبار"
                    android:textColor="#0c0c0c"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#da291c"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:id="@+id/tvAmountCredit"
                    android:text="0"
                    android:background="#ffffff"
                    android:layout_marginTop="-10dp"/>
        </LinearLayout>
</LinearLayout>
