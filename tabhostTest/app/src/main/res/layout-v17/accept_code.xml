<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <EditText
            android:id="@+id/etAcceptcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint=" کد تایید را وارد نمایید"
            android:inputType="numberDecimal"
            android:textSize="25sp"
            android:gravity="center"
            android:textAlignment="gravity"/>
        <Button
            android:id="@+id/btnSendAcceptCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAcceptcode"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="@string/Login"
            android:textSize="30sp" />
        <Button
            android:id="@+id/btnRefreshAcceptCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAcceptcode"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/rounded_button"
            android:text="@string/RefreshAcceptCode"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>
